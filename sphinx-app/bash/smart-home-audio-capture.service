# /lib/systemd/system

[Unit]
Description=Smart-Home service for capture audio per $WAITING seconds
After=syslog.target

[Service]
EnvironmentFile=/etc/smart-home-audio-capture.cfg
User=zhurlik
ExecStart=/usr/share/apps/smart-home/smart-home-audio-capture.sh
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
